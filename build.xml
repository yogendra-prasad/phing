<?xml version="1.0" encoding="UTF-8" ?>

<project name="DrupalDeploy" default="deploy">
  <property name="drupal.workingdir" value="./drupal" />
<resolvepath propertyName="drupal.workingdir.resolved" file="${drupal.workingdir}" />

<target name="deploy" description="Clone the Drupal repository">
    <delete dir="${drupal.workingdir.resolved}" includeemptydirs="true" verbose="true" failonerror="false" />
    <mkdir  dir="${drupal.workingdir.resolved}" />
    <!-- Clone drupal core -->
    <gitclone repository="git@github.com:yogendra-prasad/phing.git" targetPath="${drupal.workingdir.resolved}" />
  </target>
<target name = "commit" description="commit testing">
  <gitcommit
                repository="git@github.com:yogendra-prasad/phing.git"
                message="Commit message" allFiles="true" />
</target>
</project>

